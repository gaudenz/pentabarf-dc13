xml.div(:id=>'content-account') do

  xml.fieldset do
    xml.legend local('account')

    xml.table do
      xml << text_field_row( POPE.user, :login_name, {:size=>20} )
      xml.tr do
        xml.td( local('password'))
        xml.td do xml.input({:type=>:text,:name=>'account[password]',:size=>40}) end
      end
      xml.tr do
        xml.td( local('repeat password'))
        xml.td do xml.input({:type=>:text,:name=>'account[password2]',:size=>40}) end
      end
    end
  end

end
