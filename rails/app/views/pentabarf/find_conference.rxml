xml = Builder::XmlMarkup.new(:indent=>1)

tabs = [:simple,:advanced]
xml << js_tabs( tabs )

xml.div( :id => 'data' ) do

  tabs.each do | tab |
    xml << render( :partial => "find_conference_#{tab}")
  end

  xml.fieldset(:id=>:results)

  xml.script('switch_tab();',{:type=>'text/javascript'})
end

