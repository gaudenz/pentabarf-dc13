xml = Builder::XmlMarkup.new(:indent=>1)

xml.div(:id=>'content-comment') do
  xml.img( :src=>url_for(:controller=>'image',:action=>:event,:id=>"#{@event.event_id}-128x128"),:style=>'float: right;')
  xml.fieldset do
    xml.legend local('table::event::remark')
    xml.table do
      xml.tr do
        xml.td do
          xml << text_area_tag('event[remark]', @event.remark, {:rows => 5, :cols => 60, :tabindex => 0})
        end
      end
    end
  end
end

